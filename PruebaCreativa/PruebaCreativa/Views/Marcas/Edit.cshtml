@model PruebaCreativa.Models.Marca

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar una Marca</h1>

<h4>Campos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NombreMarca" />
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoH" class="control-label"></label>
                <input asp-for="TipoH" class="form-control" />
                <span asp-validation-for="TipoH" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exactitud" class="control-label"></label>
                <input asp-for="Exactitud" class="form-control" />
                <span asp-validation-for="Exactitud" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-light">Regresar a la Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

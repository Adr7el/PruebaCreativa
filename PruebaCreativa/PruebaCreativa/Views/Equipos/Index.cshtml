@model IEnumerable<PruebaCreativa.Models.Equipo>

@{
    ViewData["Title"] = "Index";
}

<h1>Administracion de los Equipos</h1>

<p>
    <a asp-action="Create">Agregar un nuevo Equipo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroSerie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreEquipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre_de_la_Marca)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroSerie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEquipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_de_la_Marca.NombreMarca)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.NumeroSerie">Editar</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.NumeroSerie">Detalles</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.NumeroSerie">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

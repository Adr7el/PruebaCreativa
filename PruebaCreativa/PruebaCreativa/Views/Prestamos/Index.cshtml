@model IEnumerable<PruebaCreativa.Models.Prestamo>

@{
    ViewData["Title"] = "Index";
}

<h1>Administracion de los Prestamos</h1>

<p>
    <a asp-action="Create">Crear un nuevo Prestamo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Persona)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreEquipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre_de_la_Marca)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Persona)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEquipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_de_la_Marca.NombreMarca)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Persona">Editar</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Persona">Detalles</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Persona">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
